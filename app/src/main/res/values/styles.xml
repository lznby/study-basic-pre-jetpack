<resources>

    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="Base.AppTheme"/>
    <style name="AppTheme.Translucent" parent="Base.AppTheme"/>

    <!-- font style -->
    <style name="toolbar_font_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- image textView left style -->
    <style name="image_text_view_left">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/click_layout</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:drawablePadding">16dp</item>
    </style>

    <!-- image textView right style -->
    <style name="image_text_view_right">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/click_layout</item>
        <item name="android:clickable">true</item>
        <item name="android:drawableRight">@mipmap/icon_right_arrows</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">4dp</item>
    </style>

    <!-- appbarLayout theme -->
    <style name="toolbar_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <!-- toolbar click style -->
    <style name="toolbar_click_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:background">@drawable/selector_circle</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="personal_info_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

</resources>
